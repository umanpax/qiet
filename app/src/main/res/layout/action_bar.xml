<?xml version="1.0" encoding="utf-8"?>

<com.rey.material.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:tint="@color/primaryColor"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_logo"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/gothambold"
            android:inputType="none"
            android:text="Alexis"
            android:textColor="@color/colorQietPrimary"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/imb_logoff"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/ic_logout"
            android:backgroundTint="@color/colorRedError"
            android:layout_marginEnd="10dp"
     />


    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorQietPrimary" />

</com.rey.material.widget.LinearLayout>