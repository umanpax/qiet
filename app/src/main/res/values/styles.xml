<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorBlueButtonObjectives</item>
        <item name="colorAccent">@color/colorBlueButtonObjectives</item>
        <item name="actionMenuTextColor">@color/colorBlueButtonObjectives</item>
        <item name="actionBarSize">0dp</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:listDivider">@color/colorWhite</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="DialogStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="radioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colortransparent</item>
        <item name="colorControlActivated">@color/colorGreenCard</item>
        <item name="buttonTint">@color/colorPaleGray</item>
    </style>

    <style name="AppThemeMyLight" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#0091ea</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlueButtonObjectives</item>
        <item name="colorPrimaryDark">@color/colorBlueButtonObjectives</item>
        <item name="actionBarSize">40dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="colorAccent">@color/colorBlueButtonObjectives</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="menu_drawer_style">
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@color/colorBlueButtonObjectives</item>
        <item name="android:textSize">22sp</item>
        <item name="dividerPadding">10sp</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:listDivider">@color/colorWhite</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorBlueButtonObjectives</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorBlueButtonObjectives</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorBlueButtonObjectives</item>
    </style>

    <style name="Checkbox" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorGreenCard</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorBlueButtonObjectives</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorWhite</item>
    </style>

    <style name="Radio" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorGreenCard</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorBlueButtonObjectives</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorPaleGray</item>
    </style>


    <style name="mySpinnerItemStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="fontFamily">@fonts/opensanslight</item>
        <item name="divider">@color/colorBlueButtonObjectives</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:textColor">@color/colorBlueButtonObjectives</item>
        <item name="android:textColorHint">@color/colorBlueButtonObjectives</item>
    </style>


    <style name="timePickerStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/colorBlueButtonObjectives</item>
        <item name="title">Mon titre</item>
        <item name="divider">@color/colorBlueButtonObjectives</item>
        <item name="android:textColor">@color/colorBlueButtonObjectives</item>
        <item name="android:windowTitleBackgroundStyle">@color/colorBlueButtonObjectives</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="buttonStyle">@style/Base.Animation.AppCompat.Dialog</item>
    </style>


    <style name="dialogTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/colorWhiteTransparent</item>
        <item name="title">Mon titre</item>
        <item name="colorAccent">@color/colorPaleGray</item>
        <item name="android:windowTitleBackgroundStyle">@color/colorPaleGray</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="buttonStyle">@style/Base.Animation.AppCompat.Dialog</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
